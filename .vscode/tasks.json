{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "BUILD & RUN MAIN",
            "command": "g++",
            "args": [
                "-Wall",
                "-I",
                "${workspaceFolder}\\lib",
                "-o",
                "${workspaceFolder}\\build\\main.exe",
                "${workspaceFolder}\\main\\main.cpp",
                "&&",
                "start",
                "cmd",
                "/k",
                "${workspaceFolder}\\build\\main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "clear": false,
                "showReuseMessage": false
            },
            "problemMatcher": [
                {
                    "source": "gcc",
                    "owner": "cpptools",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(?:fatal\\s+)?(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "RUN MAIN.EXE",
            "command": "start",
            "args": [
                "cmd",
                "/k",
                "${workspaceFolder}\\build\\main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "none",
            "detail": ""
